{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            2,
            2,
            { 
                "SwitchCase": 1,
                "VariableDeclarator": {
                    "let": 2,
                    "const": 3
                }
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "semi": [
            "error",
            "always",
            { "omitLastInOneLineBlock": true}
        ],
        "object-curly-spacing": [2, "always"],
        "comma-style": [2, "last"]
    },
    "globals": {
        "React": false,
        "App": false,
        "it": false,
        "describe": false,
        "beforeEach": false
    }
}